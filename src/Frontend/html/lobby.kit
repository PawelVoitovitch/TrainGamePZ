<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Koleją przez stany</title>
    <!-- @include 'link.kit' -->
</head>

<body>
    <!-- @include 'nav.kit' -->

    <main class="mainCreate">
        <div class="wrapper">
            <div class="main">
                <!-- @include 'loginForm.kit' -->
                <div class="mainCreateBox">

                    <div class="alertPopup">
                        <p class="alertPopup_text">Jakiś tekst</p>
                        <button class="alertPopup_btn">OK</button>
                    </div>

                    <section class="boxLeft">
                        <h1 class="boxLeft_title">
                            Your Name's Table
                        </h1>
                        <div class="boxLeft_users">
                        </div>
                    </section>

                    <section class="boxRight">
                        <div class="boxRight_game-setup">
                            <div class="boxRight_game-setup-players">
                                <label for="players">Players: </label>
                                <input type="number" min="4" max="8" id="players" placeholder="4" value="4">
                            </div>
                            <div class="boxRight_game-setup-turnTime">
                                <label for="turnTime">Turn time: <p class="minutes">(in minutes)</p></label>
                                <input type="number" min="1" max="10" id="turnTime" placeholder="1" value="1">
                            </div>
                            <div class="boxRight_game-setup-inviteLink">
                                <label for="inviteLink">Invite:</label>
                                <p id="inviteLink">https://ride.gg/ab3Fsg</p>
                            </div>
                        </div>
                        <div class="boxRight_game-buttons">
                            <button class="boxRight_game-buttons-button start_game"> <a href="#" class="link ">Start
                                    Game</a></button>
                            <button class="boxRight_game-buttons-button leave_game"> <a href="#"
                                    class="link">Leave</a></button>
                        </div>
                    </section>
                </div>
            </div>
        </div>

    </main>


    <script src="../dist/js/lobby.js"></script>
    <script src="../dist/js/main.js"></script>
</body>

</html>
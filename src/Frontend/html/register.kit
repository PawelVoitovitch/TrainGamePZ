<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KolejÄ… przez stany</title>
    <!-- @include 'link.kit' -->
</head>

<body>

    <!-- @include 'nav.kit' -->
    <main class="register">
        <div class="wrapper">

            <form class="form">
                <!-- @include 'loginForm.kit' -->
                <h1>Register here !</h1>
                <div class="form-box">
                    <input type="text" id="username" placeholder="Login">
                    <p class="error-text">error</p>
                </div>
                <div class="form-box">

                    <input type="email" id="email" placeholder="E-mail">
                    <p class="error-text">error</p>
                </div>
                <div class="form-box">

                    <input type="password" id="password" placeholder="Password">
                    <p class="error-text">error</p>
                </div>
                <div class="form-box">

                    <input type="password" id="password2" placeholder="Confirm Password">
                    <p class="error-text">error</p>
                </div>
                <div class="form-box">
                    <div class="checkTerms">
                        <input type="checkbox" id="terms">
                        <label for="terms"> I accept terms and conditions</label>
                    </div>
                    <p class="error-text">error</p>
                </div>
                <div class="control-buttons">
                    <button class="clear">Clear</button>
                    <button class="send">Register</button>
                </div>
                <div class="popup">
                    <p>User correctly registered</p>
                    <button class="close">Ok</button>
                </div>
            </form>
        </div>
    </main>


    <script src="./dist/js/login.js"></script>
    <script src="../dist/js/formValidation.js"></script>
    <script src="../dist/js/main.js"></script>
</body>

</html>